<p style="color: green"><%= notice %></p>

<h1>Articles</h1>

<%= form_with url: search_path, method: :get do |form| %>
    <%= form.label :search %>
    <%= form.text_field :search %>
    <%= form.submit "search" %>
<% end %>

<div id="articles">
  <%= render "articles/articles",  articles: @articles %>
</div>

<%= link_to "New article", new_article_path %>
