<div id="<%= dom_id article %>" class="article">
  <p>
    <strong>Title:</strong>
    <%= article.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= article.content %>
  </p>
  <%= button_to "remove", article, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger", style: "margin-top: 10px;" %>

</div>
